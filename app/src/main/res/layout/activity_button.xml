<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:orientation="vertical"
        tools:context=".ButtonActivity">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <Button
                    android:id="@+id/question_one_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="Question 1"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/question_two_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="Question 2"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/question_three_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="Question 3"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/question_four_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="Question  4"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/question_five_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="Question 5"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/question_six_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="Question 6"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/true_false_1_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="True or False 1"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/true_false_2_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="True or False 2"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/true_false_3_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="True or False 3"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/number_question_1_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="Number question 1"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/number_question_2_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="Number Question 2"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/number_question_3_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:text="Number Question 3"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/fill_blank_1_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fill in the blank one"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/fill_blank_2_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fill in the blank two"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/fill_blank_3_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fill in the blank three"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/spinner_one_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Spinner question 1"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/spinner_two_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Spinner question 2"
                    android:textAllCaps="false" />

                <Button
                    android:id="@+id/spinner_thrre_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Spinner Question 3"
                    android:textAllCaps="false" />
            </LinearLayout>
        </ScrollView>
</LinearLayout>
